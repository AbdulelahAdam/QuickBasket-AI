{
  "manifest_version": 3,
  "name": "QuickBasket AI",
  "version": "0.1.0",
  "description": "AI-powered price tracking across marketplaces.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.noon.com/*", "https://www.amazon.*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
