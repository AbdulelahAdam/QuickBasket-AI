{
  "manifest_version": 3,
  "name": "QuickBasket AI",
  "version": "0.1.0",
  "description": "Track product prices across Amazon and Noon marketplaces with intelligent price alerts",
  "author": "QuickBasket Team",
  "homepage_url": "http://localhost:8080",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "QuickBasket AI - Track Product Prices",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "permissions": ["storage", "alarms", "notifications", "tabs"],

  "host_permissions": [
    "http://localhost:8000/*",
    "https://*.amazon.com/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.it/*",
    "https://*.amazon.es/*",
    "https://*.amazon.ae/*",
    "https://*.amazon.eg/*",
    "https://*.amazon.sa/*",
    "https://*.amazon.in/*",
    "https://*.amazon.co.jp/*",
    "https://*.noon.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://*.noon.com/*"],
      "js": ["noon.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.it/*",
        "https://*.amazon.es/*",
        "https://*.amazon.ae/*",
        "https://*.amazon.eg/*",
        "https://*.amazon.sa/*",
        "https://*.amazon.in/*",
        "https://*.amazon.co.jp/*"
      ],
      "js": ["amazon.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "validators.js",
        "inject-amazon.js",
        "inject-noon.js"
      ],
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.it/*",
        "https://*.amazon.es/*",
        "https://*.amazon.ae/*",
        "https://*.amazon.eg/*",
        "https://*.amazon.sa/*",
        "https://*.amazon.in/*",
        "https://*.amazon.co.jp/*",
        "https://*.noon.com/*"
      ]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
